<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/cvDetails"
        card_view:cardCornerRadius="2dp"
        card_view:contentPaddingLeft="16dp"
        card_view:contentPaddingRight="16dp"
        android:layout_marginBottom="8dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">

            <TextView xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                style="?android:attr/textAppearanceLarge"
                android:id="@+id/person_description_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:text="@string/description"
                tools:context="com.maxmommersteeg.max.android_final.PersonDetailFragment" />

            <TextView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:id="@+id/person_fullname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/person_description_label"
            tools:context="com.maxmommersteeg.max.android_final.PersonDetailFragment" />

            <TextView xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:id="@+id/person_birthdate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/person_fullname"
                tools:context="com.maxmommersteeg.max.android_final.PersonDetailFragment" />

        </RelativeLayout>

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/cvLocation"
        card_view:cardCornerRadius="2dp"
        card_view:contentPaddingLeft="16dp"
        card_view:contentPaddingRight="16dp"
        android:layout_marginBottom="8dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">

            <TextView xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                style="?android:attr/textAppearanceLarge"
                android:id="@+id/person_location_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:text="@string/location"
                tools:context="com.maxmommersteeg.max.android_final.PersonDetailFragment" />

            <TextView xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:id="@+id/person_location_latitude"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/person_location_label"
                tools:context="com.maxmommersteeg.max.android_final.PersonDetailFragment" />

            <TextView xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:id="@+id/person_location_longitude"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/person_location_latitude"
                tools:context="com.maxmommersteeg.max.android_final.PersonDetailFragment" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:id="@+id/showonmap"
                android:text="@string/openmapbuttontext"
                android:layout_below="@+id/person_location_longitude"
                android:onClick="ShowOnMap"
                android:drawableRight="@drawable/ic_location_history_24dp" />

        </RelativeLayout>

    </android.support.v7.widget.CardView>


</LinearLayout>





